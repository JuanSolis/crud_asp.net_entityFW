@model Loginasp.Models.User

@{
    ViewBag.Title = "vistaRegistro";
}

<h2>Registro</h2>

@using (Html.BeginForm("Registro", "Registro", FormMethod.Post, new
{
    enctype = "multipart/form-data"
})) 
{
    @Html.AntiForgeryToken()

    <!-- Input de Correo -->
<div class="form-horizontal">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.correo, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.correo, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.correo, "", new { @class = "text-danger" })
        </div>
    </div>

    <!-- Input de password -->
    <div class="form-group">
        <label class="control-label col-2" for="InputPassword">contraseña</label>
        <div class="col-md-10">
            <input type="password" name="password" class="form-control" id="InputPassword" required />
        </div>
    </div>

    <!-- Input de verificar password  -->
    <div class="form-group">
        <label class="control-label col-2" for="InputPasswordVerificar">contraseña</label>
        <div class="col-md-10">
            <input type="password" name="passwordVerificacion" class="form-control" id="InputPasswordVerificar" required />
        </div>
    </div>

    <!-- Input de nombre Completo  -->

    <div class="form-group">
        @Html.LabelFor(model => model.nombre_completo, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.nombre_completo, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.nombre_completo, "", new { @class = "text-danger" })
        </div>
    </div>

    <!-- Input de Edad  -->

    <div class="form-group">
        @Html.LabelFor(model => model.edad, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.edad, new { htmlAttributes = new { @class = "form-control" , min="0"} })
            @Html.ValidationMessageFor(model => model.edad, "", new { @class = "text-danger" })
        </div>
    </div>

    <!-- Input de pais  -->
    <div class="form-group">
        <label for="comboPais">Pais</label>
        <div class="col-md-10">
            <select class="form-control" id="comboPais" name="pais" required>

            </select>
            @Html.ValidationMessageFor(model => model.pais, "", new { @class = "text-danger" })
        </div>
    </div>

    <!-- Input de direccion -->

    <div class="form-group">
        @Html.LabelFor(model => model.direccion, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.direccion, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.direccion, "", new { @class = "text-danger" })
        </div>
    </div>


    <!-- Input de direccion -->

    <div class="form-group">
        <div class="col-md-10">
            <input type="file" name="image" class="form-control-file" accept="image/*" required />
        </div>
    </div>



    <!-- button para enviar -->

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-primary btn-block" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
<script src="~/Scripts/jquery-3.5.1.min.js"></script>
<script src="~/Scripts/paises.js"></script>
<script src="~/Scripts/mostrarPaises.js"></script>